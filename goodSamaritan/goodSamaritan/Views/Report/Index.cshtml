@{
    ViewBag.Title = "Index";
}

<h2>Report</h2>

<div class="container">
    <!-- report filter -->
    <div class="row">
        <h4>Generate Report For</h4>
        <div class="col-md-4 well">
            @using (Html.BeginForm("Report", "Report"))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="worker" class="col-sm-6 control-label">Assigned Worker</label>
                        <div class="col-sm-6">
                            @Html.DropDownList("Workers", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="col-sm-6 control-label">File Status</label>
                        <div class="col-sm-6">
                            @Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Generate" class="btn btn-default pull-right" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>