<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Good Samaritan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Good Samaritan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                    <li>@Html.ActionLink("Smart", "Index", "Smarts")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-expanded="false">Look-up Tables <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Abuser Relationship", "Index", "AbuserRelationships")</li>
                            <li>@Html.ActionLink("Age", "Index", "Ages")</li>
                            <li>@Html.ActionLink("Assigned Workers", "Index", "AssignedWorkers")</li>
                            <li>@Html.ActionLink("Crises", "Index", "Crises")</li>
                            <li>@Html.ActionLink("Duplicate Files", "Index", "DuplicateFiles")</li>
                            <li>@Html.ActionLink("Ethnicities", "Index", "Ethnicities")</li>
                            <li>@Html.ActionLink("Family Violence Files", "Index", "FamilyViolenceFiles")</li>
                            <li>@Html.ActionLink("Incidents", "Index", "Incidents")</li>
                            <li>@Html.ActionLink("Programs", "Index", "Programs")</li>
                            <li>@Html.ActionLink("Referral Contacts", "Index", "ReferralContacts")</li>
                            <li>@Html.ActionLink("Referral Sources", "Index", "ReferralSources")</li>
                            <li>@Html.ActionLink("Repeat Clients", "Index", "RepeatClients")</li>
                            <li>@Html.ActionLink("Risk Levels", "Index", "RiskLevels")</li>
                            <li>@Html.ActionLink("Risk Statuses", "Index", "RiskStatus")</li>
                            <li>@Html.ActionLink("Services", "Index", "Services")</li>
                            <li>@Html.ActionLink("Victims Of Incidents", "Index", "VictimsOfIncidents")</li>
                            <li>@Html.ActionLink("Years", "Index", "Years")</li>
                            <li>@Html.ActionLink("Statuses Of Files", "Index", "StatusesOfFiles")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Good Samaritan</p>
            <p><strong>Disclaimer: </strong> This is a student project of FAKE website. Temporarliy 
            borrowing some website's text and link. Not for any commercial purpose. </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
